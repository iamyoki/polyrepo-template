{
  "name": "polyrepo-template",
  "version": "0.0.0",
  "private": true,
  "description": "A best-practice polyrepo template",
  "keywords": [],
  "license": "ISC",
  "author": "iamyoki",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "development": "./src/lib/index.ts",
      "import": "./dist/lib/index.js",
      "default": "./dist/lib/index.js"
    }
  },
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "./dist/lib"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "clean": "del **/{dist,*.tgz,*.tsbuildinfo}",
    "dev": "node --import=tsx --conditions=development --watch ./src/app/main.ts",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache",
    "prepare": "husky",
    "start": "node ./dist/app/main.js",
    "test": "node --import=tsx --conditions=development --test",
    "test:cov": "pnpm test --experimental-test-coverage",
    "test:watch": "pnpm test --watch"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@types/node": "^24.10.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nx": "22.1.3",
    "prettier": "~3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "engines": {
    "node": ">=24"
  },
  "nx": {}
}
